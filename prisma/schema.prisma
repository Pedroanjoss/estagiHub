generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String     @id @default(uuid()) 
  nome        String     
  email       String     @unique 
  telefone    String     
  perfil      Perfil     
  status      Status     
  senha       String     
     

  @@map("usuarios") 
}

model Estagiario {
  id       String    @id @default(uuid()) 
  email    String    @unique 
  telefone String    
  status   Status    
  senha    String    

  contratos Contrato[]

  @@map("estagiarios")
}

model Contrato {
  id               String     @id @default(uuid()) 
  modalidade       String     
  dataInicio       DateTime   
  dataFim          DateTime   
  saldoFerias      Float?     
  dataRescisao     DateTime?  
  dataInicioFerias DateTime?  
  dataFimFerias    DateTime?  
  statusFerias     StatusFerias? 
  diasCorridos     Int?       

  estagiario       Estagiario @relation(fields: [estagiarioId], references: [id]) 
  estagiarioId     String     

  @@map("contratos")
}

model Administrador {
  id          String     @id @default(uuid()) 
  nome        String     
  email       String     @unique 
  telefone    String     
  perfil      Perfil     
  status      Status     
  senha       String     
      

  @@map("administradores")
}

enum Perfil {
  Administrador
  Usuario
}

 enum Status {
  Ativo
  Inativo
}

enum StatusFerias {
  Aprovada
  Reprovada
}
